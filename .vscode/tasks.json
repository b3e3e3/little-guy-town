{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build windows debug",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "type": "shell",
      "command": "scons",
      "options": {
        "cwd": "${workspaceFolder}/extensions/ventman"
      },
      "args": [
        "platform=windows",
        "target=template_debug",
        "compiledb=yes",
        "debug_symbols=yes",
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build mac debug",
      "group": {
        "kind": "build",
        "isDefault": false,
      },
      "type": "shell",
      "command": "scons",
      "options": {
        "cwd": "${workspaceFolder}/extensions/ventman"
      },
      "args": [
        "platform=macos",
        "target=template_debug",
        "compiledb=yes",
        "debug_symbols=yes",
      ],
    }
  ]
}